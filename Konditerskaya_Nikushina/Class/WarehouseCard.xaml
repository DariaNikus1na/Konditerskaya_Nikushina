<UserControl x:Class="Konditerskaya_Nikushina.Class.WarehouseCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Konditerskaya_Nikushina.Class"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="600">
    <Border Background="White" CornerRadius="10" BorderThickness="1" BorderBrush="#FF3C1B08" Padding="15">
        <StackPanel>
            <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal">
                <TextBlock Text="Склад №" Foreground="#9E9E9E" FontSize="14"/>
                <TextBlock x:Name="warehouseContainer" FontWeight="SemiBold" FontSize="14"
                    Foreground="#333"/>
            </StackPanel>
            <DataGrid x:Name="dgItems" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" Margin="0 0 0 10"/>

        </StackPanel>
        
    </Border>
</UserControl>
