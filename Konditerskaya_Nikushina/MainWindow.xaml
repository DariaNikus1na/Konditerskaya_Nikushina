<Window x:Class="Konditerskaya_Nikushina.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Konditerskaya_Nikushina"
        mc:Ignorable="d"
        Title="Авторизация" Height="360" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="120"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
        </Grid.RowDefinitions>

        <Image Source="/Images/icon.png" />

        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="50" Height="Auto"  Foreground="#FF5B2C10"
        Margin="0" FontWeight="Bold">Dolce Vita</TextBlock>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="20" Height="Auto"  Foreground="#FF3C1B08"
Margin="20" FontWeight="Bold">Авторизация</TextBlock>

        <WrapPanel Grid.Row="1" HorizontalAlignment="Center">
            <StackPanel Orientation="Vertical" 
        VerticalAlignment="Center">
                <TextBlock FontSize="20" Margin="20">Введите логин</TextBlock>
                <TextBlock FontSize="20" Margin="20">Введите пароль</TextBlock>
            </StackPanel>
            <StackPanel Orientation="Vertical"  
        VerticalAlignment="Center">
                <TextBox FontSize="18" Margin="20" Width="150"                       
    x:Name="txtBoxLogin" Text="sofya_v"></TextBox>
                <PasswordBox FontSize="18" Margin="20" Width="150"                     
    x:Name="txtBoxPassword" Password="V@snets2025"></PasswordBox>
            </StackPanel>
        </WrapPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal"   
                HorizontalAlignment="Center"   
                VerticalAlignment="Center">
            <Button x:Name="BtnLogin" FontSize="20" Margin="5" Width="100" 
            Click="BtnLogin_Click" Background="#FFFFA2C3" BorderBrush="#FF5B2C10" Foreground="#FF5B2C10" FontWeight="Bold">Войти</Button>
            <Button x:Name="BtnClose" FontSize="20" Margin="5" Width="100" 
Click="BtnClose_Click" Background="#FFFFA2C3" BorderBrush="#FF5B2C10" Foreground="#FF5B2C10" FontWeight="Bold">Закрыть</Button>
        </StackPanel>
    </Grid>
</Window>
