<Window x:Class="Konditerskaya_Nikushina.WarehouseAcces"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Konditerskaya_Nikushina"
        mc:Ignorable="d"
        Title="DolceVita: Складской учет" Height="450" Width="800">
    <Grid>
        <TabControl>
            
            <TabItem Header="Клиенты">
                <DataGrid x:Name="dgClients">
                </DataGrid>
            </TabItem>
            <TabItem Header="Продукция">
                <ScrollViewer>
                    <WrapPanel x:Name="ProductPanel" HorizontalAlignment="Stretch">
                    </WrapPanel>
                </ScrollViewer>

            </TabItem>
            <TabItem Header="Заказы">
                <ScrollViewer>
                    <WrapPanel x:Name="OrderPanel" HorizontalAlignment="Stretch">
                    </WrapPanel>
                </ScrollViewer>

            </TabItem>
            <TabItem Header="Склады">
                <ScrollViewer>
                    <WrapPanel x:Name="WarehousePanel" HorizontalAlignment="Stretch">
                    </WrapPanel>
                </ScrollViewer>

            </TabItem>
        </TabControl>
    </Grid>

</Window>
